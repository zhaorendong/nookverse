# NookVerse 环境变量配置模板
# 复制此文件为 .env 并根据实际情况修改配置

# ==================== 应用配置 ====================
# 配置文件路径（容器内使用）
CONFIG_PATH=/app/config.json

# 服务器端口（可选，代码中有但未完全实现）
SERVER_PORT=8080

# ==================== 数据库配置 ====================
# PostgreSQL数据库密码（重要：生产环境必须修改）
POSTGRES_PASSWORD=password

# PostgreSQL数据库名称
POSTGRES_DB=nookverse

# PostgreSQL用户名
POSTGRES_USER=postgres

# ==================== Redis配置 ====================
# Redis密码（可选，如果启用认证）
REDIS_PASSWORD=

# Redis数据库编号
REDIS_DB=0

# ==================== JWT配置 ====================
# JWT密钥（生产环境必须修改为强随机字符串）
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# JWT过期时间（小时）
JWT_EXPIRE=24

# ==================== 上传配置 ====================
# 上传文件最大大小（字节）
UPLOAD_MAX_SIZE=10485760

# 上传目录路径
UPLOAD_PATH=./uploads

# ==================== 其他配置 ====================
# 时区设置
TZ=Asia/Shanghai

# 日志级别（debug/info/warn/error）
LOG_LEVEL=info

# 是否启用调试模式
DEBUG=false

# ==================== 容器相关配置 ====================
# PostgreSQL数据目录（Docker Compose使用）
PGDATA=/var/lib/postgresql/data/pgdata

# Redis配置文件路径
REDIS_CONFIG_PATH=/usr/local/etc/redis/redis.conf

# ==================== 开发环境配置 ====================
# 数据库主机（开发环境使用）
DB_HOST=localhost

# 数据库端口
DB_PORT=5432

# Redis主机
REDIS_HOST=localhost

# Redis端口
REDIS_PORT=6379

# ==================== 生产环境安全建议 ====================
# 1. 修改所有默认密码
# 2. 使用强随机JWT密钥
# 3. 启用Redis密码认证
# 4. 配置防火墙规则
# 5. 定期备份数据库
# 6. 监控系统日志
# 7. 启用HTTPS
# 8. 设置适当的文件权限